@model RPBDIS_4.Models.MaintenanceSchedule

<h2>Maintenance Schedule Details</h2>

<table class="table">
    <tr>
        <th>Equipment</th>
        <td>@Model.Equipment?.Name</td> <!-- Отображаем название оборудования -->
    </tr>
    <tr>
        <th>Maintenance Type</th>
        <td>@Model.MaintenanceType?.Description</td> <!-- Отображаем описание типа обслуживания -->
    </tr>
    <tr>
        <th>Scheduled Date</th>
        <td>@Model.ScheduledDate?.ToString("d")</td>
    </tr>
    <tr>
        <th>Estimated Cost</th>
        <td>@Model.EstimatedCost</td>
    </tr>
    <tr>
        <th>Responsible Employee</th>
        <td>@Model.ResponsibleEmployee?.FullName</td> <!-- Отображаем имя сотрудника -->
    </tr>
</table>

<a asp-action="Index">Back to List</a>
